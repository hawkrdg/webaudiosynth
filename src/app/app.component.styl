.wrapper
	position: relative
	width: 900px
	margin: 0 auto
	padding: 40px
	text-align: center
	background-color: rgba(255, 248, 240, 1.0)
	button
		position: absolute
		top: 30px
		right: 15px
	h1
		margin-top: 0
	.synthContainer
		display: flex
		justify-content: space-around
	.helpContainer
		position: absolute
		top: 20px
		right: 20px
		width: 95%
		z-index: 100
		height: 540px

		overflow: auto
		text-align: left
		padding: 10px 10px 40px
		color: rgba(255, 250, 240, 0.95)
		background-color: rgba(0, 0, 0, 0.85)
		h1
			display: inline-block
			padding-top: 10px
		img
			width: 600px
			height: auto
			margin: 10px 0 10px 80px
		button
			position: sticky
			top: 10px
			left: 680px
		a
			display: block
			color: var(--primary-color)
			text-decoration: none
			margin-left: 40px
			margin-bottom: 40px
		a:hover
			color: var(--accent-color)
			opacity: 0.6
		a:active
			color: var(--accent-color)
			opacity: 1.0
		.helpCode
			margin-left: 15px
